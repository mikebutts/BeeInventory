@page "/"
@using BeeInventory.Models

<h1>Beehive Management System</h1>

<h3>Job Assignments</h3>

<div class="row mb-3">
    <div class="col-4">
        <label for="jobSelect" class="form-label">Assign a job:</label>
        <select id="jobSelect" class="form-select" @bind="selectedJob">
            @foreach (var job in hive.AvailableJobs)
            {
                <option value="@job">@job</option>
            }
        </select>
    </div>
    <div class="col-8 d-flex align-items-end gap-2">
        <button class="btn btn-primary" @onclick="OnAssignBee">
            Assign Bee
        </button>
        <button class="btn btn-success" @onclick="OnWorkNextShift">
            Work Next Shift
        </button>
    </div>
</div>

<h3>Hive Status</h3>

<div class="row mb-3">
    <div class="col-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Eggs</h5>
                <p class="card-text display-6">@hive.Eggs</p>
            </div>
        </div>
    </div>

    <div class="col-9">
        <table class="table table-sm table-bordered mb-0">
            <thead class="table-light">
                <tr>
                    <th>Unassigned</th>
                    <th>Nectar Collectors</th>
                    <th>Honey Manufacturers</th>
                    <th>Egg Care</th>
                    <th>Total Workers</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@hive.UnassignedWorkers</td>
                    <td>@hive.NectarCollectors</td>
                    <td>@hive.HoneyManufacturers</td>
                    <td>@hive.EggCareBees</td>
                    <td>@hive.TotalWorkers</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<h3>Queen's Report</h3>
<textarea class="form-control" rows="12" readonly>@queen.StatusReport</textarea>

@code {
    private Hive hive = new Hive();
    private Queen queen = default!;
    private string selectedJob = "";

    protected override void OnInitialized()
    {
        queen = new Queen(hive);
        selectedJob = hive.AvailableJobs.First();
    }

    private void OnAssignBee()
    {
        queen.AssignBee(selectedJob);
    }

    private void OnWorkNextShift()
    {
        bool hiveAlive = queen.WorkTheNextShift();

        if (!hiveAlive)
        {
            // Optional: append a warning to the report
            queen = new Queen(hive); // or just leave it dead
        }
    }
}
